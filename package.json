{
  "name": "syllogio-api",
  "version": "0.0.0",
  "description": "A proposition API",
  "main": "build/index.js",
  "repository": "git@github.com:syllogio/syllogio-api.git",
  "author": "Peter Sieg <chasingmaxwell@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "GREMLIN_PORT=3182 node ./scripts/gremlin.js start",
    "graphql": "yarn build ; node ./dist/server.js",
    "stop": "node ./scripts/gremlin.js stop",
    "copyTypeDefs": "cp ./src/graphql/typeDefs/*.graphql ./dist/graphql/typeDefs/",
    "build": "tsc --declaration ; yarn copyTypeDefs",
    "watch": "nodemon --watch src --ext ts --exec \"yarn build ; node ./dist/server.js\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "prettier": "prettier --write \"**/*.{js,ts}\"",
    "lint": "yarn prettier ; yarn tslint",
    "jest": "GREMLIN_PORT=3183 NODE_ENV=test jest --detectOpenHandles --forceExit --coverage --verbose",
    "test": "yarn jest"
  },
  "dependencies": {
    "apollo-server-express": "^2.8.1",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "graphql": "^14.4.2",
    "graphql-import": "^0.7.1",
    "graphql-tools": "^4.0.5",
    "gremlin": "^3.4.3",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/fs-extra": "^8.0.0",
    "@types/graphql": "^14.2.3",
    "@types/gremlin": "^3.4.2",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.1",
    "@types/ramda": "^0.26.19",
    "got": "^9.6.0",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "lint-staged": ">=8",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.19",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.3"
  }
}
